// test comment
domain SimpleModel {
	rim Simple @ Annotation : tags ( "Simple" ) {

		event GET { method: GET }
		event PUT { method: PUT }
		event POST { method: POST }
		event DELETE { method: DELETE }

		command NoopGET
		command NoopPOST
		command GETNotes
		command GETNote
		command DELETENote
		
		basepath: "/Simple"

		initial resource notes {
			type: collection
			entity: Note
			view: GETNotes
			path: "/notes"
			POST -> newNote
			GET *-> note
			DELETE *-> deletedNote
		}

		resource note {
			type: item
			entity: Note
			view: GETNote
			path: "/notes/{noteID}"
			DELETE -> deletedNote
		}

		resource deletedNote {
			type: item
			entity: Note
			actions [ DELETENote ]
			path: "/notes/{noteID}"
			GET --> notes
		}

		resource newNote {
			type: item
			entity: ID
			actions [ NoopPOST ]
			path: "/notes/new"
			PUT --> note
		}

	}

}